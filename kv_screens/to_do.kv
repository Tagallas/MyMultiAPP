#: import MDRaisedButton kivymd.uix.button.MDRaisedButton
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import MDFadeSlideTransition kivymd.uix.transition.MDFadeSlideTransition

#: set app_bar_height .08

<ToDoList>
    id: to_do_list
    NavigationDrawerScreenManager:
        id: screen_manager
        transition: FadeTransition()

        # 1
        MDScreen:
            id: screen
            name: 'screen'
            CustomTopAppBar:
                id: app_bar
                MDLabel:
                    md_bg_color: 0, 0, 0, 0
                    text: root.items
                    size_hint_x: .6
                    halign: 'center'
                MDIconButton:
                    md_bg_color: 0, 0, 0, 0
                    icon: 'sort'
                    size_hint_x: .2
                    on_release: root.sort()

            MDScrollView:
                size_hint_y: 1 - app_bar_height
                pos_hint: {"top": 1 - app_bar_height}
                MainView:
                    id: main_screen
                    #pos_hint: {"top": 1}
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

        # 2
        MDScreen:
            id: calendar
            name: 'calendar'
            CustomTopAppBar:
                id: app_bar_2
                MDLabel:
                    md_bg_color: 0, 0, 0, 0
                    text: root.items
                    size_hint_x: .6
                    halign: 'center'
                MDIconButton:
                    md_bg_color: 0, 0, 0, 0
                    icon: 'arrow-right'
                    size_hint_x: .2
                    on_release: calendar_view.right_arrow()
                MDIconButton:
                    md_bg_color: 0, 0, 0, 0
                    icon: 'sort'
                    size_hint_x: .2
                    on_release: root.sort()

            MDScrollView:
                size_hint_y: 1 - app_bar_height
                pos_hint: {"top": 1 - app_bar_height}
                CalendarView:
                    id: calendar_view
                    # orientation: 'vertical'
                    size_hint_y: None
                    # height: 0

        # 3
        EditScreen:
            id: edit_screen
            name: 'edit_screen'

        # 4
        MDScreen:
            id: camara_screen
            name: 'camera_screen'
            CameraLayout:
                id: camera_layout
                orientation: 'vertical'

        # 5
        MDScreen:
            id: 'trash_can'
            name: 'trash_can'

            CustomTopAppBar:
                id: app_bar_2
                MDLabel:
                    md_bg_color: 0, 0, 0, 0
                    text: 'Trash Can'
                    size_hint_x: .6
                    halign: 'center'
                MDIconButton:
                    md_bg_color: 0, 0, 0, 0
                    icon: 'trash-can-outline'
                    size_hint_x: .2
                    on_release: root.delete_trash_dialog()

            MDScrollView:
                size_hint_y: 1 - app_bar_height
                pos_hint: {"top": 1 - app_bar_height}
                TrashCanView:
                    id: trash_can_view
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height


    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        size_hint: .7, 1
        type: "standard"
        close_on_click: True

        MDScrollView:
            CustomNavigationDrawer: #nic nie dodawaj bo sie usunie
                id: md_list_nav_drawer

<CalendarBar>
    md_bg_color: (.1, .2, .6, .85)
    orientation: 'horizontal'

<TaskLabel>
    canvas.before:
        Color:
            rgba: (.1,.1,.1,1)
        Rectangle:
            pos: self.pos
            size: self.size
<Task>
    canvas.before:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            pos: self.pos
            size: self.size

<CustomTopAppBar@MDBoxLayout>:
    orientation: 'horizontal'
    pos_hint: {"top": 1}
    md_bg_color: (.1, .2, .6, .85)
    size_hint_y: app_bar_height
    MDLabel:
        md_bg_color: 0, 0, 0, 0
        size_hint_x: .03
    MDIconButton:
        md_bg_color: 0, 0, 0, 0
        icon: 'menu'
        size_hint_x: .1
        on_release: root.parent.parent.parent.ids.nav_drawer.set_state("toggle")
    MDIconButton:
        md_bg_color: 0, 0, 0, 0
        icon: 'arrow-left'
        size_hint_x: .1
        on_release: root.parent.parent.parent.parent.parent.on_press_menu() # root.parent[x3] - classToDoList
