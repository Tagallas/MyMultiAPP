#: import MDRaisedButton kivymd.uix.button.MDRaisedButton


<ToDoList>
    id: to_do_list
    MDScreenManager:
        MDScreen:
            MDTopAppBar:
                id: app_bar
                title: root.items[0]
                pos_hint: {"top": 1}
                # elevation: 9
                md_bg_color: (.1, .2, .6, .85)
                # specific_text_color: "#4a4939"
                left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")], ["arrow-left", lambda x: root.parent.parent.on_press_menu()]]

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        size_hint: .7, 1
        #padding:
        type: "standard"
        close_on_click: True
        enable_swiping: True

        MDScrollView:
            CustomNavigationDrawer:
                #spacing: 5
                #padding: 0,0,0,100
