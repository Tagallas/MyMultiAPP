#: import MDRaisedButton kivymd.uix.button.MDRaisedButton

<ToDoListHeader>
    id: header
    pos_hint: {'top': 1}
    size_hint: 1, None
    height: root.m_size
    orientation: 'horizontal'
    spacing: root.m_size / 10
    padding: root.m_size / 10, 0 , root.m_size / 10, 0
    MenuButton:
        id: menu_button
        on_release: root.parent.on_menu_click(self)
    BackToMenuButton:
    Label:
        text: "To Do"
        font_size:  20

<ToDoListMainScreen>
    size_hint: 1, None
    height: self.minimum_height
    orientation: 'vertical'


### ___SIDE_MENU___


<SideMenu>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.width * .6, self.height
        Color:
            rgba: 0, 0, 0, .7
        Rectangle:
            size: self.width * .4, self.height
            pos: self.width * .6, 0
            on_press: root.parent.on_menu_exit()
    ScrollView:
        size_hint: .6, 1
        SideMenuButtons:
            size_hint: 1, None
            height: self.minimum_height

<SideMenuHeader>
    size_hint: 1, None
    height: root.m_size
    orientation: 'horizontal'
    spacing: root.m_size / 10
    padding: root.m_size / 10, 0 , root.m_size / 10, 0
    MenuButton:
        size_hint: None, None
        size: root.m_size, root.m_size
        on_release: root.parent.parent.parent.parent.on_menu_exit()
    Label:
        text: 'To Do'


### ___CUSTOM_WIDGETS___


<CheckNote>
    orientation: 'horizontal'
    size_hint: 1, None
    height: root.m_size

<MenuButton@MDRaisedButton>
    text: 'Menu'
    font_size: 15
    rounded_button: False
    _radius: 5
    md_bg_color: (.1, .2, .6, .85)

<AddNote>
    orientation: 'horizontal'
    size_hint: 1, None
    height: root.m_size
